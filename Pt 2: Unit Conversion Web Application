<!DOCTYPE html>
<html>
<head>
    <title>Unit Conversions</title>
    <script>
        // Función para convertir Celsius a Fahrenheit
        function convertTemperature() {
            const celsius = parseFloat(document.getElementById('c').value);
            if (!isNaN(celsius)) {
                const fahrenheit = (celsius * 9/5) + 32;
                document.getElementById('f').value = fahrenheit.toFixed(2);
            } else {
                alert('Please enter a valid Celsius value.');
            }
        }

        // Función para convertir Kilogramos a Libras
        function convertWeight() {
            const kilograms = parseFloat(document.getElementById('kg').value);
            if (!isNaN(kilograms)) {
                const pounds = kilograms * 2.205;
                document.getElementById('lbs').value = pounds.toFixed(2);
            } else {
                alert('Please enter a valid Kilogram value.');
            }
        }

        // Función para convertir Kilómetros a Millas
        function convertDistance() {
            const kilometers = parseFloat(document.getElementById('km').value);
            if (!isNaN(kilometers)) {
                const miles = kilometers / 1.609;
                document.getElementById('m').value = miles.toFixed(2);
            } else {
                alert('Please enter a valid Kilometer value.');
            }
        }

        // Asignar funciones a los botones
        window.onload = function() {
            document.getElementById('temperature').onclick = convertTemperature;
            document.getElementById('weight').onclick = convertWeight;
            document.getElementById('distance').onclick = convertDistance;
        };
    </script>
</head>

<body>
    <section id='home'>
        <header><b>Unit Conversions</b></header>
        <nav>
            <a href='#temperature'><button>Temperature</button></a>
            <a href='#weight'><button>Weight</button></a>
            <a href='#distance'><button>Distance</button></a>
        </nav>
    </section>

    <div id='all-conversion-sections'>
        <!-- Temperature Section -->
        <section id='temperature'>
